<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    >

    <TextView
        android:id="@+id/realtime_tem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33" />

    <TextView
        android:id="@+id/realtime_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/realtime_tem"
        app:layout_constraintLeft_toLeftOf="@id/realtime_tem"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/realtime_con"
        app:layout_constraintLeft_toRightOf="@id/realtime_con"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:text="|"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/realtime_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/realtime_con"
        app:layout_constraintLeft_toLeftOf="@id/line"
        android:layout_marginStart="13dp"
        android:textSize="18sp"
        android:textColor="#fff"
        />
</androidx.constraintlayout.widget.ConstraintLayout>